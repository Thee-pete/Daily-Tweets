<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailActivities.FullScreenImageActivity"
    android:orientation="vertical">
<RelativeLayout
    android:layout_above="@id/ful_ad_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/fullScreenImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:padding="5dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_image_buttons"
            android:id="@+id/sharefullBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_action_share"
           android:layout_marginStart="100dp"/>
        <ImageView
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/background_image_buttons"
            android:id="@+id/tweetfullBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/twitterimg"
          android:layout_marginEnd="100dp"/>
    </RelativeLayout>
</RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/ful_ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    </LinearLayout>


</RelativeLayout>